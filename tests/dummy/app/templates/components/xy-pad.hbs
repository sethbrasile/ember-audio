<canvas
  id="xy-canvas"

  width={{@padSize}}
  height={{@padSize}}

  {{on "mousedown" this.activate}}
  {{on "touchstart" this.activate}}

  {{on "mouseup" @deactivate}}
  {{on "mouseleave" @deactivate}}
  {{on "touchend" @deactivate}}
  {{on "touchcancel" @deactivate}}

  {{on "mousemove" this.updateCoordinates}}
  {{on "touchmove" this.updateCoordinates}}
></canvas>
